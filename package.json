{
    "name": "moonlight",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
        "format": "prettier --write \"**/*.{json,js,jsx,ts,tsx}\"",
        "moon": "moon --color --log trace"
    },
    "devDependencies": {
        "@moonrepo/cli": "^1.4.0",
        "@types/jest": "^29.5.1",
        "@types/node": "^20.1.0",
        "babel-preset-moon": "^2.0.3",
        "eslint-config-moon": "^2.0.3",
        "eslint": "^8.40.0",
        "jest-preset-moon": "^2.0.1",
        "jest": "^29.5.0",
        "prettier-config-moon": "^1.1.2",
        "prettier-plugin-tailwindcss": "^0.2.8",
        "prettier": "^2.8.8",
        "tsconfig-moon": "^1.3.0",
        "typescript": "5.0.4"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "packageManager": "pnpm@8.3.1",
    "engines": {
        "node": ">=18.16.0"
    }
}
