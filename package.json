{
  "name": "flatform",
  "private": true,
  "scripts": {
    "g:next-app": "func() { moon generate next-app ./apps/\"$1\" -- --name @myorg/\"$1\"; }; func",
    "deps": "npx --yes npm-check-updates -x typescript --deep --interactive",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "format": "prettier --write \"**/*.{json,js,jsx,ts,tsx}\"",
    "moon": "moon --color --log trace"
  },
  "devDependencies": {
    "@moonrepo/cli": "^0.26.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "babel-preset-moon": "^2.0.1",
    "eslint-config-moon": "^2.0.1",
    "eslint": "^8.36.0",
    "jest-preset-moon": "^2.0.1",
    "jest": "^29.5.0",
    "prettier-config-moon": "^1.1.2",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "prettier": "^2.8.4",
    "tsconfig-moon": "^1.2.2",
    "typescript": "^5.0.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@7.9.1",
  "engines": {
    "node": ">=18.15.0"
  }
}
