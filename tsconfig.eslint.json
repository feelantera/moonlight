{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.options.json",
    "include": ["apps/**/*", "packages/**/*", "shared-config/**/*", "**/.eslintrc.cjs"],
    "exclude": [
        "**/.cache/**/*",
        "**/.next/**/*",
        "**/build/**/*",
        "**/cjs/**/*",
        "**/dist/**/*",
        "**/esm/**/*",
        "**/lib/**/*",
        "**/mjs/**/*",
        "**/node_modules/**/*"
    ]
}
